
@model  SomeProducts.PresentationServices.Models.Create.ProductViewModel


<div class="show-product-container">
    @Html.HiddenFor(m => m.Product.Image)
    @Html.HiddenFor(m => m.Product.ImageType)
    <div class="row-fluid">
        <div class="span6">
            <div class="row-fluid">
                <div class="span5"><h4>@Html.LabelFor(m => m.Product.Name)</h4></div>
                <div class="span7"><h5>@Model.Product.Name</h5></div>
            </div>
            <div class="row-fluid description-text-area">
                <div class="span5"><h4>@Html.LabelFor(m => m.Product.Description)</h4></div>
                <div class="span7"><h5>@Model.Product.Description</h5></div>
            </div>
            <div class="row-fluid">
                <div class="span5"><h4>@Html.LabelFor(m => m.Product.BrandId)</h4></div>
                <div class="span7"><h5>@Model.Brands[Model.Product.BrandId]</h5></div>
            </div>
            <div class="row-fluid">
                <h4 class="span5">@Html.LabelFor(m => m.Product.Color)</h4>
                <div class="span7"><div class="color-div" style="background: @Model.Product.Color"></div></div>
            </div>
            <div class="row-fluid">
                <div class="span5"><h4>@Html.LabelFor(m => m.Product.Quantity)</h4></div>
                <div class="span7"><h5>@Model.Product.Quantity</h5></div>
            </div>
        </div>
        <div class="span6">
            <img class="img-thumbnail" id="image" src="~/Resources/emptyImage.jpg" />
        </div>
    </div>
   
</div>


@section scripts
{
    <script>
        $(function() {
            var params = { id: {}, url: {}, error: {} };
            params.id.imageDataId = '@Html.IdFor(m => m.Product.Image)';
            params.id.imageTypeId = '@Html.IdFor(m => m.Product.ImageType)';
            
            var imageNamespace = window.Utils.getNamespace("Image");
            imageNamespace.initImage(params);
        });
    </script>
    @Scripts.Render("~/Product/ShowProduct/Scripts")
}
@section stylesheets
{
    @Styles.Render("~/Product/ShowProduct/css")
}