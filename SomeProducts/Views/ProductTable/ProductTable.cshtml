@using PagedList.Mvc
@model SomeProducts.PresentationServices.Models.ProductTable.ProductTableViewModel

<div>
    @Html.HiddenFor(m => m.FilterInfo)
    <div class="row" style="margin: 10px 0 10px 0">
        <div class="col-xs-3">
            <h4>Name</h4>
            <div class="row">
                <div class="col-xs-8">
                    <input class="form-control" id="NameValueId" />
                </div>
                <div class="col-xs-3">
                    @Html.DropDownListFor(m => m.FilterInfo.Filters.First(f => f.Option == "Name").Parameter, new SelectList(Model.StringFilterParameter, "Key", "Value"),
                        new { @class = "btn btn-default dropdown-toggle", id = "NameParameterId" })
                </div>
            </div>
        </div>
        <div class="col-xs-3">
            <h4>Description</h4>
            <div class="row">
                <div class="col-xs-8">
                    <input class="form-control" id="DescriptionValueId" />
                </div>
                <div class="col-xs-3">
                    @Html.DropDownListFor(m => m.FilterInfo.Filters.First(f => f.Option == "Description").Parameter, new SelectList(Model.StringFilterParameter, "Key", "Value"),
                        new { @class = "btn btn-default dropdown-toggle", id = "DescriptionParameterId" })
                </div>
            </div>
        </div>
        <div class="col-xs-3">
            <h4>Brand</h4>
            <div class="row">
                <div class="col-xs-8">
                    <input class="form-control" id="BrandValueId" />
                </div>
                <div class="col-xs-3">
                    @Html.DropDownListFor(m => m.FilterInfo.Filters.First(f => f.Option == "Brand").Parameter, new SelectList(Model.StringFilterParameter, "Key", "Value"),
                        new { @class = "btn btn-default dropdown-toggle", id = "BrandParameterId" })
                </div>
            </div>
        </div>
        <div class="col-xs-3">
            <h4>Quantity</h4>
            <div class="row">
                <div class="col-xs-8">
                    <input type="number" class="form-control" id="QuantityValueId" />
                </div>
                <div class="col-xs-3">
                    @Html.DropDownListFor(m => m.FilterInfo.Filters.First(f => f.Option == "Quantity").Parameter, new SelectList(Model.NumberFilterParameter, "Key", "Value"),
                        new { @class = "btn btn-default dropdown-toggle", id = "QuantityParameterId" })
                </div>
            </div>
        </div>
    </div>
    <div>
        <button class="btn btn-success" id="FilterBtn">Filter</button>
    </div>
</div>

<div class="product-table-div">
    <table class="table">
        <thead>
            <tr>
                <th>

                </th>
                <th>
                    <div id="th-name" data-type="sort" data-name="Name">
                        Product Name
                    </div>
                </th>
                <th>Description</th>
                <th>
                    <div id="th-brand" data-type="sort" data-name="Brand">
                        Brand
                    </div>
                </th>
                <th>
                    <div id="th-quantity" data-type="sort" data-name="Quantity">
                        Quantity
                    </div>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <th>
                        @if (@product.Image != null)
                        {
                            <img class="product-table-image" style="border: 6px solid @product.Color;"
                                 src="data:@product.ImageType;base64,@Convert.ToBase64String(product.Image)" alt="" />
                        }
                        else
                        {
                            <img class="product-table-image" style="border: 6px solid @product.Color;"
                                 src="~/Resources/emptyImage.jpg" alt="" />
                        }
                    </th>
                    <th>
                        @Html.DisplayFor(p => product.Name)
                    </th>
                    <th>
                        @Html.DisplayFor(p => product.Description)
                    </th>
                    <th>
                        @Html.DisplayFor(p => product.Brand)
                    </th>
                    <th>
                        @Html.DisplayFor(p => product.Quantity)
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="row">
    <div class="col-xs-4">
        @Html.PagedListPager(Model.Products, page => Url.Action("Show", "ProductTable", new { page, count = @Model.PageInfo.ProductCount, by = @Model.PageInfo.SortingOption }))
    </div>
    <div class="dropdown col-xs-1 product-counter">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
            Products count: @Model.PageInfo.ProductCount
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            @for (var i = 1; i < 5; i++)
            {
                <li><a class="dropdown-item" href=@Url.Action("Show", "ProductTable", new {page = Model.PageInfo.Page, count = i*5, by = Model.PageInfo.SortingOption})>@(i * 5)</a></li>
            }
        </ul>
    </div>
</div>

@section scripts
{
    <script>
        $(function () {
            var params = {
                url: '@Url.Action("Show", "ProductTable", new { page = @Model.PageInfo.Page, count = @Model.PageInfo.ProductCount})',
                presentUrl: '@Url.Action("Show", "ProductTable", new { page = @Model.PageInfo.Page, count = @Model.PageInfo.ProductCount, by = @Model.PageInfo.SortingOption})',
                sortingOption: '@Model.PageInfo.SortingOption'
            };
            var productTableNamespace = window.Utils.getNamespace("ProductTable");
            productTableNamespace.init(params);
        });
    </script>
    @Scripts.Render("~/Product/ProductTable/Scripts")
}

@section stylesheets
{
    @Styles.Render("~/Product/ProductTable/css")
}

