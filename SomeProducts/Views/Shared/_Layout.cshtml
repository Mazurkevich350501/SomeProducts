@using SomeProducts.Helpers
@using R = Resources.LocalResource
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="author" content="E.Mazurkevich">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @RenderSection("stylesheets", required: false)
</head>
<body>
    <div class="navbar">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="brand" href="@Url.Action("Show", "ProductTable")"><span>SomeProducts</span></a>
                <a class="btn btn-navbar collapsed" data-toggle="collapse" data-target=".top-nav.nav-collapse,.sidebar-nav.nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="nav-no-collapse header-nav">
                    <ul class="nav pull-right">
                        <li class="dropdown">
                            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="halflings-icon white globe"></i>
                                @R.Language
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("English", "ChangeCulture", "Account", new {culture = "en", returnUrl = Request.RawUrl}, null)</li>
                                <li>@Html.ActionLink("Русский", "ChangeCulture", "Account", new {culture = "ru", returnUrl = Request.RawUrl}, null)</li>
                            </ul>
                        </li>
                        @Html.Partial("_LoginPartial")
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid-full">
        <div class="row-fluid">
            <div id="sidebar-left" class="span2">
                <div class="nav-collapse sidebar-nav collapse">
                    <ul class="nav nav-tabs nav-stacked main-menu">
                        <li><a href="@Url.Action("Show", "ProductTable")"><i class="icon-shopping-cart"></i><span class="hidden-tablet">@R.Products</span></a></li>
                        @if (User.IsInUserRole(UserRole.Admin) || User.IsInUserRole(UserRole.SuperAdmin))
                        {
                            <li><a href="@Url.Action("Create", "Product")"><i class="icon-plus"></i><span class="hidden-tablet">@R.NewProduct</span></a></li>
                            <li><a href="@Url.Action("FullAudit", "Audit")"><i class="icon-bar-chart"></i><span class="hidden-tablet">@R.FullAudit</span></a></li>
                            <li><a href="@Url.Action("Users", "Admin")"><i class="icon-user"></i><span class="hidden-tablet">@R.Users</span></a></li>
                        }
                        @if (User.IsInUserRole(UserRole.SuperAdmin))
                        {
                            <li><a href="@Url.Action("Companies", "Admin")"><i class="icon-briefcase"></i><span class="hidden-tablet">@R.Companies</span></a></li>
                        }
                    </ul>
                </div>
            </div>
            <div id="content" class="span10">
                @RenderBody()
            </div>
        </div>
    </div>
<footer>
    <p><p>&copy; @DateTime.Now.Year - My ASP.NET Application</p></p>
</footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/janux")
    @RenderSection("scripts", required: false)
    
</body>
</html>
